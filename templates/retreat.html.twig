{% extends "index.html.twig" %}

{% block main %}

    <p class="fs-3">
        <a href="{{page.link('index')}}.html">Back to index</a>
    </p>

    <div class="px-4 py-5 my-5 text-center">
        <h1 class="display-5 fw-bold">{{page.metadata.title}}</h1>
    </div>

    {% for session in page.metadata.sessions %}
        <h3>
            {{session.title}}
            <small><a href="{{session.transcript}}">Transcript</a></small>
        </h3>
        <figure>
            <audio controls src="{{session.audio}}">
                Your browser does not support the audio player, sorry!
            </audio>
        </figure> 
    {% endfor %}

{% endblock %}
