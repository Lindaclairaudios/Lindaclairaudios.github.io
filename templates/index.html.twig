<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>{{page.metadata.title}}</title>
  </head>
  <body>

  <div class="container">
    {% block main %}

      <div class="px-4 py-5 my-5 text-center">
        <h1 class="display-5 fw-bold">{{page.metadata.title}}</h1>
        <div class="col-lg-4 offset-lg-4"><img src="linda.jpg" class="img-fluid" /></div>
        <div class="mx-auto">
          <div class="lead mb-4 display-5">
            {{page.body|md2html|raw}}
          </div>
        </div>
      </div>

      <article class="mb-lg-5">
        <h2 class="lh-lg" id="retreats">Index of Retreats</h2>
        {% for p in database.query('select * from pages where template="retreat" order by date desc') %}
          <h3 class="lh-lg"><a href="{{page.link(p.id)}}.html">{{p.title}}</a></h3>
        {% endfor %}
      <article>

      {% endblock %}
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>
